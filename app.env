# Go Auth System Environment Configuration
# Copy this file to .env for local development

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_GRPC_PORT=9090
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s

# TLS Configuration
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auth_system
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=5m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=2
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s

# Security Configuration
PASSWORD_HASH_ALGORITHM=argon2
TOKEN_TYPE=jwt
JWT_SIGNING_KEY=your-secret-signing-key-change-in-production
TOKEN_ENCRYPTION_KEY=your-encryption-key-for-paseto-tokens
TOKEN_ACCESS_TTL=15m
TOKEN_REFRESH_TTL=168h
TOKEN_ISSUER=go-auth-system
TOKEN_AUDIENCE=go-auth-system

# Encryption Configuration
ENCRYPTION_MASTER_KEY=your-master-encryption-key-32-chars
KEY_MANAGEMENT=local

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MIN=100
RATE_LIMIT_BURST_SIZE=10

# Feature Flags
MFA_ENABLED=false
ADMIN_DASHBOARD_ENABLED=true
AUDIT_LOGGING_ENABLED=true

# Monitoring Configuration
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8081

# Environment
ENVIRONMENT=development